<section class="affiliate-hero-section">
    <div class="container">
        <div class="affiliate-hero-row">
            <div class="affiliate-hero-col">
                <div class="content-col">
                    {{ content|e('wp_kses_post') }}
                    <div class="block-link">
                        <a href="{{ link_url }}">{{ link_title }}</a>
                    </div>
                </div>
            </div>
            <div class="affiliate-hero-col">
                <div class="image-col">
                    {% if retina_image %}
                        <img
                            class="lazyload"
                            src="{{ placeholderImage(image.width, image.height) }}"
                            data-src="{{ image.src|resizeDynamic(image.width) }}"
                            data-srcset="{{ image.src|resizeDynamic(image.width) }} 1x, {{ retina_image.src|resizeDynamic(retina_image.width) }} 2x"
                            data-sizes="auto"
                            alt="{{ image.alt|e }}"
                        >
                    {% else %}
                        <img
                            class="lazyload"
                            src="{{ placeholderImage(image.width, image.height) }}"
                            data-src="{{ image.src|resizeDynamic(image.width) }}"
                            alt="{{ image.alt|e }}"
                        >
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>