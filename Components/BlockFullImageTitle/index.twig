<section class="block-full-image-title-section {% if is_gray_background %} gray {% endif %}">
    <div class="block-full-image-title-row {% if place_image_right %} image_right {% else %} image_left {% endif %}">
        <div class="block-full-image-title-col">
            <div class="image-col">
                {% if retina_image %}
                    <img
                        class="lazyload"
                        src="{{ placeholderImage(image.width, image.height) }}"
                        data-src="{{ image.src|resizeDynamic(image.width) }}"
                        data-srcset="{{ image.src|resizeDynamic(image.width) }} 1x, {{ retina_image.src|resizeDynamic(retina_image.width) }} 2x"
                        data-sizes="auto"
                        alt="{{ image.alt|e }}"
                    >
                {% else %}
                    <img
                        class="lazyload"
                        src="{{ placeholderImage(image.width, image.height) }}"
                        data-src="{{ image.src|resizeDynamic(image.width) }}"
                        alt="{{ image.alt|e }}"
                    >
                {% endif %}
            </div>
        </div>
        <div class="block-full-image-title-col">
            <div class="content-col">
                <div class="title-info">
                    {{ title|e('wp_kses_post') }}
                </div>
                {% if link_title %}
                    <div class="block-link">
                        <a class="global-link" href="{{ link_url }}">{{ link_title }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>