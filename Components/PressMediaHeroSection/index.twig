<section class="press-media-hero-section">
    <div class="container">
        <div class="title-info">
            {{ title|e('wp_kses_post') }}
        </div>
        <div class="image-col">
            {% if retina_image %}
                <img
                    class="lazyload"
                    src="{{ placeholderImage(image.width, image.height) }}"
                    data-src="{{ image.src|resizeDynamic(image.width) }}"
                    data-srcset="{{ image.src|resizeDynamic(image.width) }} 1x, {{ retina_image.src|resizeDynamic(retina_image.width) }} 2x"
                    data-sizes="auto"
                    alt="{{ image.alt|e }}"
                >
            {% else %}
                <img
                    class="lazyload"
                    src="{{ placeholderImage(image.width, image.height) }}"
                    data-src="{{ image.src|resizeDynamic(image.width) }}"
                    alt="{{ image.alt|e }}"
                >
            {% endif %}
        </div>
        <div class="press-media-hero-logo-row">
            {{ renderComponent('FeaturedLogoList', { 'section_title': section_title|e('wp_kses_post'), 'logo_setting' : logo_setting }) }}
        </div>
    </div>
</section>