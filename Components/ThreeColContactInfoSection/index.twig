<section class="three-col-contact-info-section">
    <div class="three-col-contact-info-section-background mobile-hide" style="background-image: url('{{ desktop_background_image.src|resizeDynamic(desktop_background_image.width) }}');"></div>
    <div class="three-col-contact-info-section-background mobile-show" style="background-image: url('{{ mobile_background_image.src|resizeDynamic(mobile_background_image.width) }}');"></div>
    <div class="container">
        <div class="three-col-contact-info-title">
            <h2>{{ title|e('wp_kses_post') }}</h2>
        </div>
        <div class="three-col-contact-info-row">
            <div class="three-col-contact-info-col">
                <div class="three-col-contact-info-inner">
                    <div class="three-col-contact-info-icon" style="background-image: url('{{ icon_1 }}');"></div>
                    <div class="three-col-contact-info-content">{{ content_1|e('wp_kses_post') }}</div>
                </div>
            </div>
            <div class="three-col-contact-info-col">
                <div class="three-col-contact-info-inner">
                    <div class="three-col-contact-info-icon" style="background-image: url('{{ icon_2 }}');"></div>
                    <div class="three-col-contact-info-content">{{ content_2|e('wp_kses_post') }}</div>
                </div>
            </div>
            <div class="three-col-contact-info-col">
                <div class="three-col-contact-info-inner">
                    <div class="three-col-contact-info-icon" style="background-image: url('{{ icon_3 }}');"></div>
                    <div class="three-col-contact-info-content">{{ content_3|e('wp_kses_post') }}</div>
                </div>
            </div>
        </div>
    </div>
</section>