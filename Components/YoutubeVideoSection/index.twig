<section class="youtube-video-section {% if is_gray_background %} gray {% endif %}">
    <div class="container">
        <div class="youtube-video-row">
            <div class="youtube-video-image-col" style="background-image: url('{{ image.src }}');">
                <div class="youtube-video-image-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="101" height="71" viewBox="0 0 101 71"><path d="M50.827-.001c3.38.007 31.76.13 39.19 2.17 4.326 1.17 7.738 4.595 8.902 8.94 1.92 7.043 2.07 20.866 2.08 23.883v.746c-.006 1.687-.118 16.751-2.08 24.236-1.164 4.344-4.575 7.768-8.902 8.937-7.588 2.006-37.027 2.086-39.37 2.09h-.296c-2.337-.004-31.703-.088-39.37-2.173-4.327-1.17-7.738-4.594-8.903-8.938C.117 52.484.005 37.35-.002 35.655v-.31c.007-1.688.119-16.752 2.08-24.236 1.164-4.344 4.659-7.853 8.902-9.022C18.41.124 46.79.006 50.168 0z"/></svg>
                </div>
            </div>
            <div class="content-col">
                <div class="inner">
                    <div class="youtube-video-logo">
                        <img
                            class="lazyload"
                            data-src="{{ logo.src|resizeDynamic(logo.width / 2) }}"
                            data-srcset="{{ logo.src|resizeDynamic(logo.width / 2) }} 1x, {{ logo.src|resizeDynamic(logo.width) }} 2x"
                            alt="{{ logo.alt|e }}"
                        />
                    </div>
                    <div class="content">
                        {{ content }}
                    </div>
                    <div class="youtube-video-btn">
                        <a href="#">Watch Video</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="youtube-video-dialog" style="display: none">
        <div class="youtube-video-dialog-inner">   
            <div class="youtube-video-dialog-close-btn"></div>
            <div class="video-responsive" data-video-url="{{ video_url }}">   
                <iframe width="560" height="315" src="{{ video_url }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>